{% extends 'src/partials/layout.njk' %}
{% block content %}
  <body class="bg-primary">

    </section>

    <h1 class="relative text-5xl text-white font-primary text-center mt-[2em] ">
      CONTACT OUR TEAM
    </h1>
<div class="flex flex-col items-center px-20 pb-96 rounded-none max-md:px-5 max-md:pb-24">
  <div class="flex flex-col items-center max-w-full w-[1180px]">
    <form class="flex flex-col items-start self-stretch w-full">
      <div class="flex flex-col items-start self-stretch pl-1.5 text-2xl text-white max-md:max-w-full">
        <label for="nameInput" class="ml-3 max-md:ml-2.5">NAME</label>
        <input 
          type="text" 
          id="nameInput" 
          name="name" 
          placeholder="Ex: JOHN DOE"
          aria-label="Enter your name"
          class="self-stretch px-8 py-10 mt-4 rounded-2xl border-4 border-green-600 border-solid text-white text-opacity-50 bg-transparent max-md:px-5 max-md:max-w-full"
        />
        
        <label for="emailInput" class="mt-3 ml-3 max-md:ml-2.5">EMAIL</label>
        <input 
          type="email" 
          id="emailInput" 
          name="email" 
          placeholder="Ex: johndoe@gmail.com"
          aria-label="Enter your email"
          class="self-stretch px-8 py-10 mt-4 rounded-2xl border-4 border-green-600 border-solid text-white text-opacity-50 bg-transparent max-md:px-5 max-md:mr-1 max-md:max-w-full"
        />
        
        <label for="messageInput" class="mt-10 ml-3 max-md:ml-2.5">MESSAGE</label>
        <textarea 
          id="messageInput" 
          name="message" 
          placeholder="Write something cool to us......"
          aria-label="Enter your message"
          class="self-stretch px-10 pt-11 pb-96 mt-3.5 text-2xl rounded-2xl border-4 border-green-600 border-solid text-white text-opacity-50 bg-transparent max-md:px-5 max-md:pb-28 max-md:max-w-full"
        ></textarea>
      </div>

      <button 
        type="submit"
        class="gap-2.5 self-stretch py-5 pr-6 pl-5 mt-20 max-w-full text-3xl ml-80 font-semibold text-white whitespace-nowrap bg-green-600 rounded-xl min-h-[78px] w-[514px] max-md:pr-5 max-md:mt-10 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2"
      >
        Submit
      </button>
    </form>

     <h1 class="relative text-5xl text-white font-primary text-center mt-[2em] ">
      SPONSORS
    </h1>

     <div class="w-[130em] items-center mt-[-20em]">
       <img
      src="/Group81.png" alt="img">
    </div>
        </div>
      </div>
    </div>
  </div>
</div>
  </body>
{% endblock %}